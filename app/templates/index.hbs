<nav class="navbar navbar-expand-md">
    <button class="navbar-toggler" type="button" data-toggle="collapse"
            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item {{if showAllTasks 'active'}}">
            <a href="#" class="nav-link" {{on 'click' (fn this.showTab 0)}}>All Tasks </a>
        </li>

        <li class="nav-item {{if showCompletedTasks  'active'}}">
            <a href="#" class="nav-link" {{on 'click' (fn this.showTab 1)}}>Completed Tasks</a>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a href="#" class="nav-link user-img-container">
                <img src="assets/images/user.png" class="img-fluid" alt="Responsive image"></a>
        </li>
    </ul>
</nav>


<!--Tasks Tabs-->
<div class="main-content">
    {{#if showAllTasks }}

        {{#if this.inCompleteTasks}}

            <div class="section-title d-flex flex-row justify-content-between">
                <span class="mr-auto">Task</span>
                <span class="ml-auto">Actions</span>
            </div>

            {{task-list tasks=this.inCompleteTasks}}

        {{else}}


            <EmptyTaskList @message="Congrats! Looks like you have completed all tasks"></EmptyTaskList>

        {{/if}}

    {{else if showCompletedTasks}}

        {{#if this.completedTasks}}

            <div class="section-title d-flex flex-row justify-content-between">
                <span class="mr-auto">Task</span>
                <span class="ml-auto">Actions</span>
            </div>

            {{task-list tasks=this.completedTasks}}

        {{else}}

            <EmptyTaskList @message="Looks like you haven't completed any task"
                           @complete="{{true}}"></EmptyTaskList>

        {{/if}}
    {{/if}}


</div>
