<div class="card task">
    <div class="d-flex flex-row justify-content-between">
        <!--left content details-->
        <div class="d-flex flex-row">
            <!--checkbox-->
            <div class="select-task">
                <label>
                    <input type="checkbox" checked="{{if @task.isComplete 'checked'}}"
                        {{on 'click' (fn this.toggleTaskStatus @task) }}>
                    <span class="custom-check-mark"></span>
                </label>
            </div>
            <div class="task-details d-flex flex-column">
                <p class="task-title">
                    {{@task.name}}
                </p>
                <p class="task-description">
                    {{@task.description}}
                </p>
            </div>
        </div>
        <!--right content (action buttons)-->
        <div class="d-flex flex-row task-action">

            <div class="pin-task-btn" {{on 'click' (fn this.togglePinStatus @task)}}></div>

            {{#if @task.isComplete}}
                <div class="task-completed"  {{on 'click' (fn this.toggleTaskStatus @task)}}>Complete</div>
            {{else}}
                <div class="complete-task-btn"  {{on 'click' (fn this.toggleTaskStatus @task)}}>Done</div>

            {{/if}}
        </div>
    </div>
</div>
